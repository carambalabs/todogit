{
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}
